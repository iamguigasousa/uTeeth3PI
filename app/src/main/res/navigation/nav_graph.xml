<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="br.com.puccampinas.uteeth3pi.LoginContaFragment"
        android:label="Logar ou criar conta"
        tools:layout="@layout/fragment_login_conta" >

        <action
            android:id="@+id/action_LoginFragment_to_CriarContaFragment"
            app:destination="@id/CriarContaFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_HomeFragment"
            app:destination="@+id/HomeFragment"/>

    </fragment>


    <fragment
        android:id="@+id/CriarContaFragment"
        android:name="br.com.puccampinas.uteeth3pi.CriarContaFragment"
        android:label="Criar Conta"
        tools:layout="@layout/fragment_criar_conta" >

        <action
            android:id="@+id/action_CriarContaFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/HomeFragment"
        android:name="br.com.puccampinas.uteeth3pi.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_InfoFragment"
            app:destination="@+id/InfoFragment" />
        <action
            android:id="@+id/action_HomeFragment_to_RecyclerViewFragment"
            app:destination="@+id/RecyclerView"/>

    </fragment>

    <fragment
        android:id="@+id/NotificationFragment"
        android:name="br.com.puccampinas.uteeth3pi.NotificationsAreDisabledFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notifications_are_disabled">


    </fragment>

    <fragment
        android:id="@+id/InfoFragment"
        android:name="br.com.puccampinas.uteeth3pi.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info">

    </fragment>

    <fragment
        android:id="@+id/RecyclerView"
        android:name="br.com.puccampinas.uteeth3pi.recyclerview.RecyclerViewFragment"
        android:label="Info"
        tools:layout="@layout/fragment_recycler_view">


    </fragment>



</navigation>